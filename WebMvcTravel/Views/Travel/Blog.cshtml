
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using WebMvcTravel.Models
@using PagedList.Mvc
@model PagedList.IPagedList<Blogs>
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tour Packer</title>
</head>

<body class="">
    <!-- BEGIN # MODAL LOGIN -->
    <!-- END # MODAL LOGIN -->
    <!-- start Container Wrapper -->
    <div class="container-wrapper">
        <div class="clear"></div>
        <!-- start Main Wrapper -->
        <div class="main-wrapper scrollspy-container">

            <!-- start end Page title -->
            <div class="page-title" style="background-image:url('/Content/images/hero-header/breadcrumb.jpg');">

                <div class="container">

                    <div class="row">

                        <div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">

                            <h1 class="hero-title">博客</h1>

                            <ol class="breadcrumb-list">
                                <li><a href="index.html">主页</a></li>
                                <li><span>博客</span></li>
                            </ol>

                        </div>

                    </div>

                </div>

            </div>
            <!-- end Page title -->

            <div class="content-wrapper">

                <div class="container">

                    <div class="row">

                        <div class="col-sm-8 col-md-9">

                            <div class="blog-wrapper">
                                @foreach (var item in Model)
                                {
                                    <div class="blog-item">

                                        <div class="blog-media">
                                            <div class="overlay-box">
                                                <a class="blog-image" href="blog-single.html">
                                                    <img src="@item.Url" alt="" />
                                                    <div class="image-overlay">
                                                        <div class="overlay-content">
                                                            <div class="overlay-icon"><i class="pe-7s-link"></i></div>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="blog-content">
                                            <h3><a href="blog-single.html" class="inverse">@item.Title</a></h3>
                                            <ul class="blog-meta clearfix">
                                                <li>通过<a href="#">@(item.Users_Id == 1 ? "管理员" : "用户")</a></li>
                                                <li>@item.StartTime</li>
                                            </ul>
                                            <div class="blog-entry">
                                                @item.Remark
                                            </div>
                                            <a href="/Travel/Blog_Single?id=@item.BlogsId" class="btn-blog">阅读更多 <i class="fa fa-long-arrow-right"></i></a>
                                        </div>

                                    </div>
                                }
                                <div class="pager-wrappper mt-0 clearfix">
                                    @*分页*@
                                    @Html.PagedListPager(Model, pageIndex => Url.Action("Blog", new { pageIndex }),
                                   new PagedListRenderOptions
                                   {
                                       LinkToFirstPageFormat = "首页",
                                       LinkToNextPageFormat = "下一页",
                                       LinkToPreviousPageFormat = "上一页",
                                       LinkToLastPageFormat = "尾页",
                                       MaximumPageNumbersToDisplay = 2,
                                       DisplayItemSliceAndTotal = false
                                   }
                                   )
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4 col-md-3 mt-50-xs">
                            <aside class="sidebar">
                                <div class="sidebar-inner no-border for-blog">
                                    <div class="sidebar-module">
                                        <h4 class="sidebar-title">最新的帖子</h4>
                                        <div class="sidebar-module-inner">

                                            <ul class="sidebar-post">
                                                <li class="clearfix">
                                                    <a href="blog-single.html">
                                                        <div class="image">
                                                            <img src="~/Content/images/blog/01-sm.jpg" alt="Popular Post" />
                                                        </div>
                                                        <div class="content">
                                                            <h6>Enough around remove to barton agreed regret</h6>
                                                            <p class="recent-post-sm-meta"><i class="fa fa-clock-o mr-5"></i>June 01, 2016</p>
                                                        </div>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="clear"></div>
                                    <div class="sidebar-module">
                                        <h4 class="sidebar-title">热门帖子</h4>
                                        <div class="sidebar-module-inner">
                                            <ul class="sidebar-post">
                                                <li class="clearfix">
                                                    <a href="blog-single.html">
                                                        <div class="image">
                                                            <img src="~/Content/images/blog/01-sm.jpg" alt="Popular Post" />
                                                        </div>
                                                        <div class="content">
                                                            <h6>Appetite welcomed interest the goodness boy</h6>
                                                            <p class="recent-post-sm-meta"><i class="fa fa-comments mr-5"></i>5 comments</p>
                                                        </div>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                            </aside>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>  <!-- end Container Wrapper -->
    <!-- start Back To Top -->
    <div id="back-to-top">
        <a href="#"><i class="fa fa-angle-up"></i></a>
    </div>
    <!-- end Back To Top -->
    <!-- JS -->
</body>
</html>



