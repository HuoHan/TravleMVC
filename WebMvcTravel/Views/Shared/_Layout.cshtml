    @*注册登录*@
    <script>
        //注册
        $("#regsCheck").click(function () {
            var flag1, flag2, flag3, flag4 = false;
            var phone = $("#register_Phone").val();
            var regPhone = /^1[34578]\d{9}$/;
            flag1 = regPhone.test(phone);
            var userName = $("#register_username").val();
            var userPwd = $("#register_password").val();
            var trueName = $("#register_truename").val();
            if (userName != null || userName != "") {
                flag2 = true;
            }
            if (userPwd != null || userPwd != "") {
                flag3 = true;
            }
            if (trueName != null || trueName != "") {
                flag4 = true;
            }
            if (!flag2) {
                alert("用户名不能为空");
                return;
            }
            if (!flag1) {
                alert("手机号格式不正确");
                return;
            }
            if (!flag3) {
                alert("密码不能为空");
                return;
            }
            if (!flag4) {
                alert("真是姓名不能为空");
                return;
            }
            $.ajax({
                url: "/Travel/CheckUser",
                data: { userName: userName, userPwd: userPwd, phone: phone, trueName: trueName },
                success: function (data) {
                    var d = eval(data);
                    if (d > 0) {
                        alert("注册成功");
                    }
                    else {
                        alert("注册失败");
                    }
                }
            })
        })
        //登陆
        $("#uLogin").click(function () {
            var userName = $("#login_username").val();
            var userPwd = $("#login_userpwd").val();
            $.ajax({
                url: "/Travel/CheckLogin",
                data: { 'userName': 'userName', 'userPwd': 'userPwd' },
                success: function (data) {
                    var d = eval(data);
                    if (d > 0) {
                        alert("登陆成功");
                    }
                    else {
                        alert("登陆失败");
                    }
                }
            })
        })

        $("#register_username").blur(function () {
            var userName = $("#register_username").val();
            $.ajax({
                async: false, // 此处要设置为同步
                cache: true, // 默认true,设置为 false 将不会从浏览器缓存中加载请求信息。
                type: "GET", // 默认:GET 请求方式:[POST/GET]
                url: "/Travel/GetStatu", // 默认当前地址,发送请求的地址
                data: { userName: userName }, // 发送到服务器的数据
                error: function (XMLHttpRequest, textStatus, errorThrown) { alert(XMLHttpRequest + "," + textStatus + "," + errorThrown); }, // 请求失败时调用
                timeout: 6000, // 设置请求超时时间
                success: function (msg) {
                    var me = eval('' + msg + '');
                    if (me == "existed") {
                        //在页面上显示此用户名已经存在
                        alert("该用户已存在");
                    }
                    else {
                        alert("该用户可以使用");
                    }
                },
                complete: function () {
                }
            });
        });
    </script>
